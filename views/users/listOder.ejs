<%- include('../inc/top') %>

<div style="width: 1170px; margin: auto">
    <h2 style="text-align: center;margin-top: 18px;margin-bottom: 20px;">Danh sách các sản phẩm đã mua</h2>
    <div>
        <div style="float: left;">
            <h3 style="color: rgb(172, 55, 143);">Người dùng: 
              <% if (objUser.fullname === "") { %>
                Chưa cập nhập
            <% } else { %>
              <%=objUser.fullname %>
            <% } %>
            </h3>
        </div>
        <div style="float: right;width: 110px;height: 40px;background-color: aquamarine;text-align: center;border-radius: 10px;">
            <h3><a style="text-decoration: none;
                color: inherit;font-weight: bold;font-size: 20px;" href="/users">Đóng</a></h3>
        </div>
    </div>
  <div style="margin-top: 30px;clear: both;">
    <div class="card shadow-sm p-3 mb-5 bg-white rounded">
      <div class="table table-striped">
    <table id="myTable" class="table table-responsive-xl">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th style="text-align: center;">Tổng tiền thanh toán</th>
                <th style="text-align: center;">Số lượng mua</th>
                <th style="text-align: center;">Kích cỡ sản phẩm</th>
                <th style="text-align: center;">Ngày mua</th>
                <th>&nbsp;</th>

            </tr>
        </thead>
        <tbody>
            <% userBills.forEach(function(bill) { %>
            <tr>
                <td style="width: 350px;">
                    <% for (var i = 0; i < bill.list.length; i++) { %>
                     - <%= bill.list[i].name_product %> <br>
                    
                    <% } %>
                  </td>
                <td style="text-align: center;">
                    <%= bill.total.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %>
                </td>
                <td style="text-align: center;">
                    <% for (var i = 0; i < bill.list.length; i++) { %>
                        <%= bill.list[i].quantity %> <br>
                       
                       <% } %>
                </td>
                <td style="text-align: center;">
                    <% for (var i = 0; i < bill.list.length; i++) { %>
                      <%= bill.list[i].size %><br>
                    <% } %>
                  </td>
                  <td style="text-align: center;">
                    <%= bill.date %>
                  </td>
                  <td>
                                          
                  </td>   
            </tr>
            <% }); %>
        </tbody>
    </table>
  </div>
</div>
</div>



<%- include('../inc/bottom') %>
